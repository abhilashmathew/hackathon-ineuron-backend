//  instalation of lint
//  yarn add eslint --dev
//  yarn create @eslint/config
// yarn add @typescript-eslint/eslint-plugin @typescript-eslint/parser -D
{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "require-await":"warn"
    }
}
